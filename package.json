{
  "name": "git-files-paths",
  "displayName": "Git Files Paths",
  "description": "Automatically copies the relative paths for all the modified/new files in the current working directory.",
  "version": "0.0.1",
	"publisher": "fravitto00",
  "author": {
		"name": "Honolulu"
	},
	"license": "MIT",
	"homepage": "https://github.com/srmeyers/git-prefix/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/srmeyers/git-prefix/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/srmeyers/git-prefix.git"
	},
  "engines": {
    "vscode": "^1.89.0"
  },
	"categories": [
		"Other"
	],
	"icon": "images/icon.png",
	"preview": false,
	"galleryBanner": {
		"color": "#f0efe7",
		"theme": "light"
	},
	"keywords": [
		"git"
	],
	"activationEvents": [
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Git Files Paths",
			"properties": {
				"git-files-paths.pattern": {
					"type": "string",
					"default": "(.*)",
					"description": "A regular expression to extract from branch name. Should match entire branch."
				},
				"git-files-paths.patternIgnoreCase": {
					"type": "boolean",
					"default": false,
					"description": "Ignore case in pattern."
				},
				"git-files-paths.replacementIsFunction": {
					"type": "boolean",
					"default": false,
					"description": "Replacement string is a function return expression with parameters (p1, p2, p3...) matching patterns."
				},
				"git-files-paths.replacement": {
					"type": "string",
					"default": "[$1] ",
					"description": "Content to place in commit message."
				},
				"git-files-paths.isSuffix": {
					"type": "boolean",
					"default": false,
					"description": "Suffix the pattern instead of prefix"
				}
			}
		},
		"commands": [
			{
				"command": "git-files-paths.copyPaths",
				"title": "Copy Git Files Paths",
				"icon": {
					"dark": "images/icon.svg",
					"light": "images/icon_light.svg"
				}
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "git-files-paths.copyPaths",
					"when": "scmProvider == git",
					"group": "navigation"
				}
			]
		}
	},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
